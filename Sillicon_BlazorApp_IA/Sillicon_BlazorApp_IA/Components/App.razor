@inject IHttpContextAccessor ICA

@code {
    [CascadingParameter]
    private HttpContext? hc { get; set; }

    private string? isDark;

    protected override async Task OnInitializedAsync()
    {
        if (hc != null)
        {
            isDark = hc.Request.Cookies["darkmode"] ?? "light";
        }
    }
}
