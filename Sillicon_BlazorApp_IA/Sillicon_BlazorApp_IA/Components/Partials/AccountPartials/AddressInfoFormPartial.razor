
<div class="adress">
    <div class="address-form-group">

        <EditForm Model="AddressModel" FormName="addressname" OnInvalidSubmit="UpdateAddress" novalidate>
            <DataAnnotationsValidator />

            <div id="form-addressline_1" class="input-group">
                <label for="Addressline_1">Address line 1</label>
                <ValidationMessage For="() => AddressModel.Addressline_1" />
                <InputText @bind-Value="AddressModel.Addressline_1" id="AddressLine_1" placeholder="Enter your address line" />
            </div>

            <div id="form-addressline_2" class="input-group">
                <label for="Addressline_2">Address line 2 <span>(optional)</span></label>
                <ValidationMessage For="() => AddressModel.Addressline_2" />
                <InputText @bind-Value="AddressModel.Addressline_2" id="AddressLine_´2" placeholder="Enter your second address line" />
            </div>

            <div class="postal-city">
                <div id="form-postalcode" class="input-group">
                    <label for="PostalCode">Postal code</label>
                    <ValidationMessage For="() => AddressModel.PostalCode" />
                    <InputText @bind-Value="AddressModel.PostalCode" id="PostalCode" placeholder="Enter your postal code" />
                </div>

                <div id="form-city" class="input-group">
                    <label for="City">City</label>
                    <ValidationMessage For="() => AddressModel.City" />
                    <InputText @bind-Value="AddressModel.City" id="City" placeholder="Enter your city" />
                </div>
            </div>

            <div class="buttons">
                <button type="button" class="btn-gray">Cancel</button>
                <button type="submit" class="btn-theme">Save changes</button>
            </div>
        </EditForm>
    </div>
</div>


